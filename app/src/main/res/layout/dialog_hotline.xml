<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@drawable/white_top_rounded_corner_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageButton
            android:id="@+id/hotlineClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/White"
            android:src="@drawable/ic_baseline_close_24"
            android:layout_margin="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/hotlineHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:textColor="@color/Indigo"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/hotlineClose"
            app:layout_constraintTop_toBottomOf="@+id/hotlineClose"
            tools:text="Hotline" />

        <TextView
            android:id="@+id/subHeaderHotline"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:textColor="@color/Light_Grey"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/hotlineClose"
            app:layout_constraintTop_toBottomOf="@+id/hotlineHeader"
            tools:text="Layanan darurat via telephone yang disediakan olehKemnkes dan juga pemprov DKI" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvHotline"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/subHeaderHotline"
            tools:itemCount="2"
            tools:listitem="@layout/item_hotline" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>