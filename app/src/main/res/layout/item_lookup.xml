<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="16dp"
    app:cardElevation="16dp"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/White"
        android:padding="16dp">

            <TextView
                android:id="@+id/headerList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="24sp"
                android:textColor="@color/Indigo"

                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="DKI Jakarta"/>
            <TextView
                android:id="@+id/dataRecovery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20sp"
                android:background="@drawable/circle_shape"
                android:backgroundTint="@color/Teal"
                android:padding="12sp"
                android:text="08258"
                android:textColor="@color/White"
                android:textSize="12sp"
                android:textStyle="bold"
                android:gravity="center"

                app:layout_constraintEnd_toStartOf="@+id/dataPositif"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/headerList" />

            <TextView
                android:id="@+id/dataPositif"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20sp"
                android:background="@drawable/circle_shape"
                android:backgroundTint="@color/Green"
                android:padding="12sp"
                android:text="08258"
                android:textColor="@color/White"
                android:textSize="12sp"
                android:textStyle="bold"
                android:gravity="center"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/headerList" />

            <TextView
                android:id="@+id/dataDead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20sp"
                android:background="@drawable/circle_shape"
                android:backgroundTint="@color/Red"
                android:padding="12sp"
                android:text="08258"
                android:textColor="@color/White"
                android:textSize="12sp"
                android:textStyle="bold"
                android:gravity="center"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/dataPositif"
                app:layout_constraintTop_toBottomOf="@+id/headerList" />
    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.cardview.widget.CardView>